<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <LinearLayout android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="#fff">
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:scaleType="centerCrop"
            android:animateLayoutChanges="true" >
            <ImageView android:id="@+id/foto"
                android:layout_width="fill_parent"
                android:layout_height="300dip"
                android:scaleType="centerCrop"
                android:contentDescription="@string/action_settings"/>
            <ImageView android:layout_width="fill_parent"
                android:layout_height="300dip"
                android:background="@drawable/transparent_background"
                android:contentDescription="@string/action_settings"/>
            <TextView android:id="@+id/nama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:paddingLeft="10dip"
                android:paddingBottom="30dip"
                android:layout_alignParentBottom="true"/>
            <TextView android:id="@+id/alamat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14dp"
                android:paddingLeft="10dip"
                android:paddingBottom="13dip"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView android:id="@+id/detailTempat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#44330b"
            android:textSize="14dp"
            android:padding="15dip"
            android:animateLayoutChanges="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp"
            android:text="Ulasan"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:src="@drawable/user16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahari Bastian"
                android:layout_marginTop="7dp"
                android:textSize="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelayanannya bagus, harga nya murah2..."
                android:layout_marginTop="30dp"
                android:layout_marginLeft="-83dp"
                android:textSize="11dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-15dp"
            android:padding="8dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="5dp"
                android:src="@drawable/user17"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taylor Swift"
                android:layout_marginTop="7dp"
                android:textSize="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jos tenann pokok e.... heheh"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="-68dp"
                android:textSize="11dp"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>